{
  "attachments": [
    {
      "color": "#67C23A",
      "blocks": [
        {
          "type": "header",
          "text": {
            "type": "plain_text",
            "text": "KAMONOHASHI テスト通知",
            "emoji": true
          }
        },
@if (Model.Mention != null) {
@:       {
@:          "type": "section",
@:          "text": {
@:            "type": "mrkdwn",
@:            "text": "@@@(Model.Mention)"
@:          }
@:        },
}   
        {
          "type": "section",
          "fields": [
            {
              "type": "mrkdwn",
              "text": "*送信者:*\n@(Model.UserName)"
            }
          ]
        },
        {
          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": "*URL:*\n@(Model.URL)"
          }
        }
      ]
    }
  ]
}
