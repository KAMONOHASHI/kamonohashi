{
  "attachments": [
    {
      "color": "@(Model.Color)",
      "blocks": [
        {
          "type": "header",
          "text": {
            "type": "plain_text",
            "text": "@Raw(Model.Title)",
            "emoji": true
          }
        },
@if (Model.Mention != null) {
@:       {
@:          "type": "section",
@:          "text": {
@:            "type": "mrkdwn",
@:            "text": "@@@(Model.Mention)"
@:          }
@:        },
}
        {
          "type": "section",
          "fields": [
            {
              "type": "mrkdwn",
              "text": "*ID:*\n @(Model.Id)"
            },
            {
              "type": "mrkdwn",
              "text": "*Name:*\n @Raw(Model.Name)"
            },
            {
              "type": "mrkdwn",
              "text": "*Tenant:*\n @(Model.TenantName)"
            },
            {
              "type": "mrkdwn",
              "text": "*Created by:*\n @(Model.UserName)"
            },
            {
              "type": "mrkdwn",
@if (Model.Status != null) {
@:            "text": "*Status:*\n @(Model.Status)"
} else {
@:            "text" : "*Message:*\n @Raw(Model.Message)"
}
            }
          ]
        },
        {
          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": "<@(Model.URL)|More>"
          }
        }
      ]
    }
  ]
}